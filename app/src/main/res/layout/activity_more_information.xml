<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:padding="@dimen/activity_horizontal_margin"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="15sp"
        android:enabled="false"
        android:textColor="@color/colorWhite"
        android:text="Số chứng minh nhân dân"/>

    <EditText
        android:id="@+id/ed_more_number_idenf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_edittext_default"
        android:gravity="center"
        android:padding="10dp"
        android:enabled="false"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:text="Ngày cấp"/>
    <EditText
        android:id="@+id/ed_more_date_idenf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_default"
        android:padding="10dp"
        android:enabled="false"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:text="Nơi cấp"/>
    <EditText
        android:id="@+id/ed_more_place_idenf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_default"
        android:padding="10dp"
        android:enabled="false"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:text="Số giấy phép lái xe"/>
    <EditText
        android:id="@+id/ed_more_number_license"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_default"
        android:padding="10dp"
        android:gravity="center"
        android:enabled="false"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:text="Số seri giấy phép lái xe"/>
    <EditText
        android:id="@+id/ed_more_seri_license"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_default"
        android:padding="10dp"
        android:gravity="center"
        android:enabled="false"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:text="Biển số xe"/>

    <EditText
        android:id="@+id/ed_more_number_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_edittext_default"
        android:gravity="center"
        android:enabled="false"
        android:padding="10dp"/>
</LinearLayout>