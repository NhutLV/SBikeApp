<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorApp"
        android:orientation="vertical"
        android:padding="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_logo"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/input_name_sign_up"
            style="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_account_box_black_24dp"
            android:hint="Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/input_email_sign_up"
            style="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:hint="Address"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="3" />

        <EditText
            android:id="@+id/input_number_phone_sign_up"
            style="@style/MyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_settings_phone_black_24dp"
            android:hint="Number Phone"
            android:inputType="numberDecimal" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner_type_repair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext_default"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_time_open_register"
                style="@style/MyTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:enabled="false"
                android:text="Time Open" />

            <Button
                android:id="@+id/btn_time_open_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_default"
                android:padding="12dp"
                android:text="Open"
                android:textColor="@color/colorApp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_time_close_register"
                style="@style/MyTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:enabled="false"
                android:text="Time Close" />

            <Button
                android:id="@+id/btn_time_close_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_default"
                android:padding="12dp"
                android:text="Close"
                android:textColor="@color/colorApp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_register_info_repair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_button_default"
            android:text="Sign Up"
            android:textColor="@color/colorApp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_back_info_repair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_button_default"
            android:text="Back to home"
            android:textColor="@color/colorApp"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>