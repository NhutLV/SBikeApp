<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title_name"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="Tên : "/>
        <TextView
            android:id="@+id/name_repair"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:maxLines="2"
            android:textColor="@color/colorApp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Cửa hàng xe máy Thịnh Phát"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_address"
        android:layout_below="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_destination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Địa chỉ: "/>

        <TextView
            android:id="@+id/address_repair"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:maxLines="2"
            android:layout_height="wrap_content"
            android:text="Kiệt 47, Nguyễn Lương Bằng, Hòa Khánh Bắc, Đà Nẵng"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_biker"
        android:layout_below="@+id/layout_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title_phone"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="Số điện thoại : "/>
        <TextView
            android:id="@+id/phone_repair"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:maxLines="2"
            android:layout_height="wrap_content"
            android:text="01687184516"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_time"
        android:layout_below="@+id/layout_biker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/title_time"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:text="Hoạt động : "/>
            <TextView
                android:id="@+id/time_repair"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="6h30 - 21h30"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_distance_price"
        android:layout_below="@+id/layout_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/title_distance"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:text="Khoảng cách: "/>
        <TextView
            android:id="@+id/distance_current"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="500 m"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/call_repair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/layout_address"
        android:background="@android:color/transparent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/phone"/>
</RelativeLayout>