<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_icon_search"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_favorite_black_24dp"

        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_toRightOf="@+id/item_icon_search"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name_place_search"
            android:text="Đại học bách khoa Đà Nẵng"
            android:layout_width="match_parent"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/address_place_search"
            android:text="54 Nguyễn Lương Bằng"
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/distance_place_search"
            android:text="Cách 8 km"
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>