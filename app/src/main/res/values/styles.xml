<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeMain" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MyText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#FFFFFF</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
    </style>

    <!--custom progress dialog-->

    <style name="CustomDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Login</item>
        <item name="DialogSpotCount">4</item>
    </style>


    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <!---->

    <style name="MyEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_edittext_icon</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="MyTextView" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_edittext_icon</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>
